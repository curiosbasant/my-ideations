{
  "conventionalCommits.promptBody": false,
  "conventionalCommits.promptFooter": false,
  "conventionalCommits.scopes": ["db", "games", "parinaam", "snapfile", "youtube"],
  "cSpell.words": [
    "basant",
    "hookform",
    "ianvs",
    "immer",
    "nativewind",
    "parinaam",
    "Pressable",
    "qrcode",
    "shortcode",
    "signin",
    "snapfile",
    "snaplet",
    "supabase",
    "supabase",
    "superjson",
    "tailwindcss",
    "tanstack",
    "trpc",
    "turbopack",
    "zustand"
  ],
  "editor.codeActionsOnSave": {
    "source.sortImports": "never"
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.formatOnSaveMode": "file",
  "files.associations": {
    "**/tailwind.css": "tailwindcss"
  },
  "material-icon-theme.files.associations": {
    "tailwind.css": "tailwindcss"
  },
  "reactSnippets.settings.importReactOnTop": false,
  "reactSnippets.settings.languageScopes": "typescriptreact,javascriptreact",
  "tailwindCSS.experimental.classRegex": [
    ["Classes ?\\=([^;]*)", "'([^']*)'"],
    ["Classes ?\\=([^;]*)", "\"([^\"]*)\""],
    ["Classes ?\\=([^;]*)", "\\`([^\\`]*)\\`"],
    ["ClassName ?\\=([^;]*)", "'([^']*)'"],
    ["ClassName ?\\=([^;]*)", "\"([^\"]*)\""],
    ["ClassName ?\\=([^;]*)", "\\`([^\\`]*)\\`"]
  ],
  "tailwindCSS.classFunctions": ["cva", "cn", "cx", "styled"],
  "tailwindCSS.experimental.configFile": {
    "apps/basant.dev/src/app/tailwind.css": "apps/basant.dev/src/**/*.tsx",
    "apps/random/tailwind.config.ts": "apps/random/src/**/*.tsx",
    "apps/spend-buddy/tailwind.config.ts": "apps/spend-buddy/src/**/*.tsx"
  },
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "typescript.preferences.autoImportFileExcludePatterns": [
    "next/router.d.ts",
    "next/dist/client/router.d.ts",
    "drizzle-orm/mysql-core/index.d.ts",
    "drizzle-orm/sqlite-core/index.d.ts"
  ],
  "typescript.preferences.importModuleSpecifier": "non-relative",
  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.tsserver.experimental.enableProjectDiagnostics": true,
  "workbench.editor.customLabels.enabled": true,
  "workbench.editor.customLabels.patterns": {
    "**/app/**/{page,layout,template,loading,error,route}.{ts,tsx}": "${dirname(1)}/${dirname} <${filename}>",
    "**/{client,index}.{ts,tsx}": "${dirname} <${filename}>"
  }
}
